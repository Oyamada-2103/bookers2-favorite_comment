<div class = 'container px-5 px-sm-0'>
  <div class = "row">
    <div class='col-12'>
      <% if @range == "User" %>
        <h3> Users search for "<%= @word %>" </h3>
        <table class = "table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th>introduction</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
                <td><%= link_to user.name, user_path(user.id) %></td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h3> Book search for "<%= @word %>" </h3>
        <table class = "table">
          <thead>
            <tr>
              <th></th>
              <th>title</th>
              <th>opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>


